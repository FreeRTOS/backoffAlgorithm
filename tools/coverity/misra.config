// MISRA C-2012 Rules

{
    version : "2.0",
    standard : "c2012",
    title: "Coverity MISRA Configuration",
    deviations : [
        // Disable the following rules.
        {
            deviation: "Directive 4.9",
            reason: "Allow inclusion of function like macros. Logging is done using function like macros."
        },
        {
            deviation: "Rule 2.4",
            reason: "Allow unused tags. Some compilers warn if types are not tagged."
        },
        {
            deviation: "Rule 3.1",
            reason: "Allow nested comments. Documentation blocks contain comments for example code."
        },
        {
            deviation: "Rule 8.7",
            reason: "API functions are not used by library. They must be externally visible in order to be used by the application."
        },
        {
            deviation: "Rule 12.3",
            category: "Advisory",
            reason: "Allow use of assert(), expansion of which uses comma operator."
        },
        {
            deviation: "Rule 15.6",
            category: "Required",
            reason: "Allow use of assert(), expansion of which contains non-compound if statements."
        },
        {
            deviation: "Rule 20.12",
            category: "Required",
            reason: "Allow use of assert(), which uses a parameter in both expanded and raw forms."
        }
    ]
}
